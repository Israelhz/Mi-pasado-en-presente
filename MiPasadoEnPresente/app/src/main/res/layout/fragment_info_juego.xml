<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itesm.mx.mipasadoenpresente.InfoJuegoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_respuesta_persona"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_respuesta_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textAlignment="viewStart"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_respuesta_relacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Relación: "
            android:textAlignment="viewStart"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_respuesta_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cumpleaños: "
            android:textAlignment="viewStart"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_respuesta_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Comentarios: "
            android:textAlignment="viewStart"
            android:textSize="28sp" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:text="Continuar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>
