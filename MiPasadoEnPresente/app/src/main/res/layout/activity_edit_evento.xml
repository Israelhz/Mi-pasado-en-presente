<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:weightSum="1"
        tools:context="itesm.mx.mipasadoenpresente.EditPersonaActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expanded_image"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_weight="1"
                android:contentDescription="CONTENTDESCRIPTION"
                android:visibility="gone"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/imageBtn_left"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/ic_keyboard_arrow_left_black_24dp" />

            <ImageView
                android:id="@+id/iv_imagenes_evento"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/imageBtn_right"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/ic_keyboard_arrow_right_black_24dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_agregar_imagen_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Agregar imagen"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8.20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_grabar"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:background="@android:color/holo_red_light"
                android:text="Grabar audio"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:background="@android:color/holo_green_light"
                android:text="Reproducir audio"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_relacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8.20"
            android:text="relaciÃ³n"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvFechaEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha del Evento"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvComentarioEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvPersonasAsociadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personas Asociadas"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personas_asociadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_green_light"
            android:text="Guardar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_borrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_red_light"
            android:text="Borrar evento"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

    </LinearLayout>
</ScrollView>